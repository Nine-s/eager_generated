manifest {
   mainScript = 'main.nf'
}

trace {
   enabled = true
   overwrite = true
   file = '_trace_eager'
   fields = 'task_id, hostname, hash, native_id, process, tag, name, status, exit, module, container, cpus, time, disk, memory, attempt, submit, start, complete, duration, realtime, queue, %cpu, %mem, rss, vmem, peak_rss, peak_vmem, rchar, wchar, syscr, syscw, read_bytes, write_bytes, vol_ctxt, inv_ctxt, env, workdir, scratch, error_action' 
}

report {
   enabled = true
   overwrite = true
   file = '_report_eager.html'
}

timeline {
   enabled = true
   overwrite = true
   file = '_timeline_eager'
}

dag {
   enabled = true
   overwrite = true
   file = '_dag_eager.html'
}


docker {
    enabled = true
}

process{
   executor = 'k8s'
   scratch = true
   nodeSelector = 'exp=ninon_nextflow_test'
   withLabel:ALL {
    pod {
        nodeSelector = 'exp=ninon_nextflow_test'
        }
    }
}

k8s {
    debug {
       yaml = true
    }
   namespace = 'ninon'
   fetchNodeName = true
   context = 'ninon'
   runAsUser = 0
   storageClaimName = 'nextflow-ninon'
   storageMountPath = '/workdir'
}


params {
	strand = 'unstranded'
	outdir = 'results'
	csv_input = '/workdir/projects/Nine-s/eager_generated/input.csv'
	annotation_gtf = '/workdir/ninon/data/Mus_musculus.GRCm39.111.gtf'
	genome = '/workdir/ninon/data/Mus_musculus.GRCm39.dna.toplevel.fa'
	transcripts_fasta = '/workdir/ninon/data/Drosophila_melanogaster.BDGP6.32.cdna.all.fa'
	basedir = '/workdir/projects/Nine-s/eager_generated'
	outdir = '/workdir/ninon/results/'
	krakendb = '/workdir/ninon/data_eager/kraken/archaea'
	db_to_dl = 'archaea'
	metagenomic_min_support_reads = 1
	complexity_filter_poly_g_min = 10
	clip_adapters_list = ''
	clip_forward_adaptor = 'AGATCGGAAGAGCACACGTCTGAACTCCAGTCAC'
	clip_reverse_adaptor = 'AGATCGGAAGAGCGTCGTGTAGGGAAAGAGTGTA'
	preserve5p = false
	skip_collapse = false
	skip_trim = false
	mergedonly = false
	qualitymax = 41
	clip_readlength = 30
	clip_min_read_quality = 20
	min_adap_overlap = 1
	bt2_alignmode = 'local'
	bt2_sensitivity = 'sensitive'
	bt2n = 0
	bt2l = 0
	bt2_trim5 = 0
	bt2_trim3 = 0
	bt2_maxins = 500
	metagenomic_complexity_entropy = 0.3
	bam_unmapped_type = 'both'
	bam_filter_minreadlength = 0
	bam_mapping_quality_threshold = 0
	large_ref = false
	threads = 16
}
